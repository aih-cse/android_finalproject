<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    >

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/txt_bg"
        android:layout_marginLeft="24dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/card_bg"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="140dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/image_test"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/price_bg"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:text="30$"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:textColor="#363636"
                    />



            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="أنا والليل وأفكاري"
                    android:fontFamily="@font/almarai"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="سارة أحمد"
                    android:fontFamily="@font/almarai"
                    android:textColor="#7A7A7A"
                    android:layout_marginTop="7dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/views"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4000"
                        android:textSize="12sp"
                        android:background="@drawable/rate"
                        android:backgroundTint="#E6F6F4"
                        android:drawableRight="@drawable/eye"
                        android:textAlignment="center"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:layout_marginLeft="2dp"
                        />

                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3.5"
                        android:textSize="10sp"
                        android:background="@drawable/rate"
                        android:backgroundTint="#FFF9E6"
                        android:drawableRight="@drawable/star"
                        android:textAlignment="center"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:layout_marginRight="2dp"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>


</FrameLayout>